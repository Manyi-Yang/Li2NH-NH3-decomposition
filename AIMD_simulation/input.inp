&GLOBAL
  PRINT_LEVEL LOW
  WALLTIME 1000000000
  PROJECT Li2NH_slab_NVT
  RUN_TYPE MD
  SEED 19311
&END GLOBAL

&MOTION
  &MD
    COMVEL_TOL 0.000005
    ANGVEL_TOL 0.000005
    ANGVEL_ZERO
    #ENSEMBLE NPT_I
    ENSEMBLE NVT
    STEPS 2500 ##steps
    TIMESTEP  1
    TEMPERATURE 750
    
    &THERMOSTAT 
      TYPE CSVR
      &CSVR
        TIMECON 50.
      &END CSVR
    &END THERMOSTAT

  &END MD

 &CONSTRAINT
    &FIXED_ATOMS
      COMPONENTS_TO_FIX XYZ
      LIST 1..42
    &END FIXED_ATOMS
  &END CONSTRAINT


 &PRINT
    &TRAJECTORY
      ADD_LAST NUMERIC
      FORMAT PDB
      &EACH
        MD 2
      &END EACH
    &END TRAJECTORY
    
    &RESTART
      ADD_LAST NUMERIC
      &EACH
        MD 1
      &END EACH
    &END RESTART
    &RESTART_HISTORY ON
    &END

 &END PRINT

 &FREE_ENERGY
   &METADYN
   USE_PLUMED .TRUE.
   PLUMED_INPUT_FILE plumed_NH.dat
&END METADYN
 &END FREE_ENERGY   

&END MOTION

&FORCE_EVAL
  METHOD Quickstep
#  STRESS_TENSOR ANALYTICAL
  &DFT
    CHARGE 1
    MULTIPLICITY 1
    BASIS_SET_FILE_NAME ./GTH_BASIS_SETS
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
    WFN_RESTART_FILE_NAME Li2NH_slab_NVT-RESTART.kp
    &MGRID
      CUTOFF 300
      REL_CUTOFF 40
    &END MGRID
    
    &SCF
    SCF_GUESS ATOMIC
     #SCF_GUESS RESTART
      EPS_SCF 1.0E-5
      MAX_SCF 50
      ADDED_MOS 50
      CHOLESKY INVERSE
      &DIAGONALIZATION ON
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING T
        METHOD BROYDEN_MIXING
        ALPHA 0.2
        BETA 0.5
        NBROYDEN 16
        &END MIXING
      &SMEAR ON
        METHOD FERMI_DIRAC
          ELECTRONIC_TEMPERATURE [K] 300
      &END SMEAR
    &END SCF

    &XC
     &XC_FUNCTIONAL PBE
     &END XC_FUNCTIONAL
    &END XC

  &END DFT

  &SUBSYS
    &CELL
      ABC  10.087 10.087  33.00
      PERIODIC XYZ
    &END CELL
    &TOPOLOGY
       COORD_FILE_NAME Li2NH_slab.xyz
       COORD_FILE_FORMAT XYZ
    &END TOPOLOGY

    &KIND Li
      BASIS_SET TZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q3
      ELEMENT Li
    &END KIND
    &KIND N
      BASIS_SET TZVP-GTH
      POTENTIAL GTH-PBE-q5
      ELEMENT N
    &END KIND
    &KIND H
      BASIS_SET TZVP-GTH
      POTENTIAL GTH-PBE-q1
      ELEMENT H
    &END KIND

  &END SUBSYS
&END FORCE_EVAL
